    <!-- $id$ -->

    <!--

============================================================================================================
=                                           output files definition                                        =
=                                   Define your own files ocean biogeochemistry                            =
=                                 put the variables according to field_def_top.xml                         =
============================================================================================================
    -->

    <file_definition type="one_file" name="@expname@_@freq@_@startdate@_@enddate@" sync_freq="1mo" min_digits="4">

      <file_group id="1ts" output_freq="1ts"  output_level="10" enabled=".TRUE."/> <!-- 1 time step files -->

      <file_group id="1h" output_freq="1h"  output_level="10" enabled=".TRUE."/> <!-- 1h files -->
      <file_group id="2h" output_freq="2h"  output_level="10" enabled=".TRUE."/> <!-- 2h files -->
      <file_group id="3h" output_freq="3h"  output_level="10" enabled=".TRUE."/> <!-- 3h files -->
      <file_group id="4h" output_freq="4h"  output_level="10" enabled=".TRUE."/> <!-- 4h files -->
      <file_group id="6h" output_freq="6h"  output_level="10" enabled=".TRUE."/> <!-- 6h files -->

      <file_group id="1d" output_freq="1d"  output_level="10" enabled=".TRUE."/>  <!-- 5d files -->
      <file_group id="5d" output_freq="5d"  output_level="10" enabled=".TRUE."/>  <!-- 5d files -->

      <file_group id="1m" output_freq="1mo" output_level="10" enabled=".TRUE."> <!-- real monthly files -->

        <file id="file200" name_suffix="_grid_bfm" description="BFM variables" >
          <field field_ref="O2o"      name="o2"         long_name="Dissolved Oxygen Concentration"                     unit="mol m-3" > @O2o * 1e-03 </field>
          <field field_ref="O3c"      name="dissic"     long_name="Dissolved Inorganic Carbon Concentration"           unit="mol m-3" > @O3c * (1e-03 / $mwC) </field> 
          <field field_ref="O3h"      name="talk"       long_name="Total Alkalinity"                                   unit="mol m-3" > @O3h * 1e-03 </field>
          <field field_ref="pCO2"     name="pco2"       long_name="Aqueous Partial Pressure of CO2"                    unit="Pa"      > @pCO2 * 1e-06 * 101325.0 </field>
          <field field_ref="pH"       name="ph"         long_name="pH"                                                 unit="1"      />
          <field field_ref="N1p"      name="po4"        long_name="Total Dissolved Inorganic Phosphorus Concentration" unit="mol m-3" > @N1p * 1e-03 </field>
          <field field_ref="N3n"      name="no3"        long_name="Dissolved Nitrate Concentration"                    unit="mol m-3" > @N3n * 1e-03 </field>
          <field field_ref="N4n"      name="nh4"        long_name="Dissolved Ammonium Concentration"                   unit="mol m-3" > @N4n * 1e-03 </field>
          <field field_ref="N5s"      name="si"         long_name="Total Dissolved Inorganic Silicon Concentration"    unit="mol m-3" > @N5s * 1e-03 </field>
          <field field_ref="N7f"      name="dfe"        long_name="Dissolved Iron Concentration"                       unit="mol m-3" > @N7f * 1e-06 </field>
          <field field_ref="P1c"      name="phydiat"    long_name="Mole Concentration of Diatoms expressed as Carbon in Sea Water"                     unit="mol m-3" > @P1c * (1e-03 / $mwC) </field>
          <field field_ref="P2c"      name="phymisc"    long_name="Mole Concentration of Miscellaneous Phytoplankton expressed as Carbon in Sea Water" unit="mol m-3" > @P2c * (1e-03 / $mwC) </field>
          <field field_ref="P1l"      name="chldiat"    long_name="Diatom Chlorophyll Mass Concentration"              unit="kg m-3" > @P1l * 1e-06 </field>
          <field field_ref="P2l"      name="chlmisc"    long_name="Other Phytoplankton Chlorophyll Mass Concentration" unit="kg m-3" > @P2l * 1e-06 </field>
          <field field_ref="Z4c"      name="zmeso"      long_name="Mole Concentration of Mesozooplankton expressed as Carbon in Sea Water"             unit="mol m-3" > @Z4c * (1e-03 / $mwC) </field>
          <field field_ref="Z5c"      name="zmicro"     long_name="Mole Concentration of Microzooplankton expressed as Carbon in Sea Water"            unit="mol m-3" > @Z5c * (1e-03 / $mwC) </field>
          <field field_ref="B1c"      name="bacc"       long_name="Bacterial Carbon Concentration"                     unit="mol m-3" > @B1c * (1e-03 / $mwC) </field>
          <field field_ref="R1c"      name="dissoc"     long_name="Dissolved Organic Carbon Concentration"             unit="mol m-3" > @R1c * (1e-03 / $mwC) </field>
          <field field_ref="R6c"      name="detoc"      long_name="Detrital Organic Carbon Concentration"              unit="mol m-3" > @R6c * (1e-03 / $mwC) </field>
          <field field_ref="jsurO2o"  name="fgo2"       long_name="Surface Downward O2 Flux"                           unit="mol m-2 s-1" > @jsurO2o * ( -1e-03 / 86400.0) </field> 
          <field field_ref="jsurO3c"  name="fgco2"      long_name="Surface Downward CO2 Flux"                          unit="kg m-2 s-1"  > @jsurO3c * ( -1e-06 / 86400.0) </field>
          <field field_ref="sinkR6c"  name="expc"       long_name="Downward Flux of Particulate Organic Carbon"        unit="mol m-2 s-1" > @sinkR6c * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="sinkR6s"  name="expsi"      long_name="Sinking Particulate Silica Flux"                    unit="mol m-2 s-1" > @sinkR6s * (1e-03 / 86400.0) </field>
          <field field_ref="sinkR6f"  name="expfe"      long_name="Sinking Particulate Iron Flux"                      unit="mol m-2 s-1" > @sinkR6f * (1e-06 / 86400.0) </field>
          <field field_ref="sinkO5c"  name="expcalc"    long_name="Downward Flux of Calcite"                           unit="mol m-2 s-1" > @sinkO5c * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="P1l"      name="chl"        long_name="Total Chlorophyll Mass Concentration"               unit="kg m-3"      operation="average" freq_op="1d" > (@P1l + @P2l) * 1e-06 </field>
          <field field_ref="ruPPYc"   name="pp"         long_name="Primary Carbon Production by Phytoplankton"         unit="mol m-3 s-1" operation="average" freq_op="1d" > (@ruPPYc - @resPPYc)   * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="ruPPYc1"  name="ppdiat"     long_name="Diatom Primary Carbon Production"                   unit="mol m-3 s-1" operation="average" freq_op="1d" > (@ruPPYc1 - @resPPYc1) * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="ruPPYc2"  name="ppmisc"     long_name="Other Phytoplankton Carbon Production"              unit="mol m-3 s-1" operation="average" freq_op="1d" > (@ruPPYc2 - @resPPYc2) * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="ETW"      long_name="Seawater temperature in situ" />
          <field field_ref="EIR"      />
          <field field_ref="xEPS"     />
          <field field_ref="Q6c"      />
          <field field_ref="Q6n"      />
          <field field_ref="Q6p"      />
          <field field_ref="Q6s"      />
          <field field_ref="Q1c"      />
          <field field_ref="Q1n"      />
          <field field_ref="Q1p"      />
          <field field_ref="Q16c"     />
          <field field_ref="Q16n"     />
          <field field_ref="Q16p"     />
          <field field_ref="Q16s"     />
        </file>

      </file_group>

      <file_group id="2m" output_freq="2mo" output_level="10" enabled=".TRUE."/> <!-- real 2m files -->
      <file_group id="3m" output_freq="3mo" output_level="10" enabled=".TRUE."/> <!-- real 3m files -->
      <file_group id="4m" output_freq="4mo" output_level="10" enabled=".TRUE."/> <!-- real 4m files -->
      <file_group id="6m" output_freq="6mo" output_level="10" enabled=".TRUE."/> <!-- real 6m files -->

      <file_group id="1y"  output_freq="1y" output_level="10" enabled=".TRUE."> <!-- real yearly files -->

        <file id="file210" name_suffix="_grid_bfm" description="BFM variables" >
          <field field_ref="jsurO3c"  name="fgco2"    long_name="Surface Downward CO2 Flux"                          unit="kg m-2 s-1"  > @jsurO3c * ( -1e-06 / 86400.0) </field>
          <field field_ref="O2o"      name="o2"       long_name="Dissolved Oxygen Concentration"                     unit="mol m-3" > @O2o * 1e-03 </field>
          <field field_ref="O3c"      name="dissic"   long_name="Dissolved Inorganic Carbon Concentration"           unit="mol m-3" > @O3c * (1e-03 / $mwC) </field>
          <field field_ref="O3h"      name="talk"     long_name="Total Alkalinity"                                   unit="mol m-3" > @O3h * 1e-03 </field>
          <field field_ref="pCO2"     name="pco2"     long_name="Aqueous Partial Pressure of CO2"                    unit="Pa"      > @pCO2 * 1e-06 * 101325.0 </field>
          <field field_ref="pH"       name="ph"       long_name="pH"                                                 unit="1"      />
          <field field_ref="O5c"      name="calc"     long_name="Calcite Concentration"                              unit="mol m-3" > @O5c * (1e-03 / $mwC) </field>
          <field field_ref="CO3"      name="co3"      long_name="Carbonate Ion Concentration"                        unit="mol m-3" > (@CO3 * @ERHO) * 1e-06 </field>
          <field field_ref="N1p"      name="po4"      long_name="Total Dissolved Inorganic Phosphorus Concentration" unit="mol m-3" > @N1p * 1e-03 </field>
          <field field_ref="N3n"      name="no3"      long_name="Dissolved Nitrate Concentration"                    unit="mol m-3" > @N3n * 1e-03 </field>
          <field field_ref="N4n"      name="nh4"      long_name="Dissolved Ammonium Concentration"                   unit="mol m-3" > @N4n * 1e-03 </field>
          <field field_ref="N5s"      name="si"       long_name="Total Dissolved Inorganic Silicon Concentration"    unit="mol m-3" > @N5s * 1e-03 </field>
          <field field_ref="N7f"      name="dfe"      long_name="Dissolved Iron Concentration"                       unit="mol m-3" > @N7f * 1e-06 </field>
          <field field_ref="P1c"      name="phydiat"  long_name="Mole Concentration of Diatoms expressed as Carbon in Sea Water"                     unit="mol m-3" > @P1c * (1e-03 / $mwC) </field>
          <field field_ref="P2c"      name="phymisc"  long_name="Mole Concentration of Miscellaneous Phytoplankton expressed as Carbon in Sea Water" unit="mol m-3" > @P2c * (1e-03 / $mwC) </field>
          <field field_ref="P1l"      name="chldiat"  long_name="Diatom Chlorophyll Mass Concentration"              unit="kg m-3" > @P1l * 1e-06 </field>
          <field field_ref="P2l"      name="chlmisc"  long_name="Other Phytoplankton Chlorophyll Mass Concentration" unit="kg m-3" > @P2l * 1e-06 </field>
          <field field_ref="Z4c"      name="zmeso"    long_name="Mole Concentration of Mesozooplankton expressed as Carbon in Sea Water"             unit="mol m-3" > @Z4c * (1e-03 / $mwC) </field>
          <field field_ref="Z5c"      name="zmicro"   long_name="Mole Concentration of Microzooplankton expressed as Carbon in Sea Water"            unit="mol m-3" > @Z5c * (1e-03 / $mwC) </field>
          <field field_ref="B1c"      name="bacc"     long_name="Bacterial Carbon Concentration"                     unit="mol m-3" > @B1c * (1e-03 / $mwC) </field>
          <field field_ref="R1c"      name="dissoc"   long_name="Dissolved Organic Carbon Concentration"             unit="mol m-3" > @R1c * (1e-03 / $mwC) </field>
          <field field_ref="R6c"      name="detoc"    long_name="Detrital Organic Carbon Concentration"              unit="mol m-3" > @R6c * (1e-03 / $mwC) </field>
          <field field_ref="R6n"      name="pon"      long_name="Particulate Organic Nitrogen Concentration"         unit="mol m-3" > @R6n * 1e-03 </field>
          <field field_ref="R6p"      name="pop"      long_name="Particulate Organic Phosphorus Concentration"       unit="mol m-3" > @R6p * 1e-03 </field>
          <field field_ref="R6s"      name="bsi"      long_name="Particulate Biogenic Silica Concentration"          unit="mol m-3" > @R6s * 1e-03 </field>
          <field field_ref="R6f"      name="bfe"      long_name="Particulate Biogenic Iron Concentration"            unit="mol m-3" > @R6f * 1e-03 </field>
          <field field_ref="P1l"      name="chl"      long_name="Total Chlorophyll Mass Concentration"               unit="kg m-3"      operation="average" freq_op="1d" > (@P1l + @P2l) * 1e-06 </field>
          <field field_ref="ruPPYc"   name="pp"       long_name="Primary Carbon Production by Phytoplankton"         unit="mol m-3 s-1" operation="average" freq_op="1d" > (@ruPPYc - @resPPYc)   * (1e-03 / $mwC / 86400.0) </field>
          <field field_ref="R1n"      />
          <field field_ref="R1p"      />
          <field field_ref="OCalc"    />
          <field field_ref="OArag"    /> 
          <field field_ref="P1n"      />
          <field field_ref="P1p"      />
          <field field_ref="P1s"      />
          <field field_ref="P1f"      />
          <field field_ref="P2n"      />
          <field field_ref="P2p"      />
        </file>

      </file_group>

      <file_group id="2y"  output_freq="2y" output_level="10" enabled=".TRUE."/> <!-- real 2y files -->
      <file_group id="5y"  output_freq="5y" output_level="10" enabled=".TRUE."/> <!-- real 5y files -->
      <file_group id="10y" output_freq="10y" output_level="10" enabled=".TRUE."/> <!-- real 10y files -->

   </file_definition>

